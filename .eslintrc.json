{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },
  "extends": [
      "next",
      "next/core-web-vitals",
      "standard-with-typescript",
      "prettier",
      "standard",
      "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
    "react", "@typescript-eslint", "prettier"
  ],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 100,
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": false,
        "bracketSpacing": false,
        "arrowParens": "always",
        "endOfLine": "auto"
      }
    ]
  }
}
